#!/bin/sh
# WE should process errors manually
#set -e

REMOTE_NAME="$1"
BRANCH_NAME="$2"

if [ "$REMOTE_NAME" == "" ]; then
    >&2 echo "âŒ  Error: please specify remote name as the first argument"
    exit 1
fi

if [ "$BRANCH_NAME" == "" ]; then
    >&2 echo "âŒ  Error: please specify branch name as the second argument"
    exit 1
fi

echo "âŒ›ï¸  `date +"%H:%M:%S"` Pulling $BRANCH_NAME branch from $REMOTE_NAME..."
git pull "$REMOTE_NAME" "$BRANCH_NAME"
echo "ğŸ  `date +"%H:%M:%S"` Done!"

